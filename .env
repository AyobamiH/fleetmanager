# Server port (local). Render injects its own PORT.
PORT=3001

# Mongo
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DBNAME=fleet_prod
MONGODB_APPNAME=fleet-api

# Auth
JWT_SECRET=replace-with-a-long-random-string

# CORS (comma-separated, no spaces)
ALLOWED_ORIGINS=http://localhost:5173,https://*.lovable.dev

# Realtime scaling (optional)
REDIS_URL=

# Webhook signing (optional but recommended)
WEBHOOK_SECRET=

# Cloudinary (used by routes/documents.js)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=fleet
MAX_UPLOAD_MB=15
